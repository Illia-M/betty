{%- import 'macro/source.html.j2' as sourceMacros -%}

{% macro cite(citation) -%}
    {% set citationNumber = citations.cite(citation) %}
    <a href="#reference-{{ citationNumber }}" class="citation">[{{ citationNumber }}]</a>
{%- endmacro -%}

{%- macro referenceLabel(citation) -%}
    {% if citation.description %}
        <a href="{{ ('/citation/' ~ citation.id) | url }}">{{ citation.description }}</a> ({{ sourceMacros.link(citation.source) }})
    {% else %}
        {{ sourceMacros.link(citation.source) }}
    {% endif %}
{%- endmacro -%}
