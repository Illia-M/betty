{% macro label(place, context=None) %}
    <address>
        {{ _label(place, context) }}
    </address>
{% endmacro %}

{% macro _label(place, context=None) %}
    <a href="/place/{{ place.id }}">{{ place.label }}</a>
    {%- if place.enclosed_by and place.enclosed_by != context -%}
        ,{{ _label(place.enclosed_by, context) }}
    {%- endif -%}
{% endmacro %}