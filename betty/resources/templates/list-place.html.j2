{% import 'macro/place.html.j2' as placeMacros %}
<div class="places" id="places-{{ places | map(attribute='id') | join(',') }}">
    <ul class="entities">
        {% for place in places | sort(attribute='name') %}
            <li class="{{ loop.cycle('odd', 'even') }}" data-betty-place-id="{{ place.id }}">
                {{ placeMacros.label(place, context=place_context | default(None)) }}
            </li>
        {% endfor %}
    </ul>
</div>
