{{- references.track() or '' -}}
{%- import 'macro/reference.html.j2' as referenceMacros -%}
<!doctype html>
<html lang="en"
      prefix="foaf: http://xmlns.com/foaf/0.1/ og: http://ogp.me/ns# rel: http://purl.org/vocab/relationship/">
<head>
    <title>{{ title | striptags }} - {{ site.configuration.title }}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="generator" content="Betty (https://github.com/bartfeenstra/betty)"/>
    <meta name="og:title" content="{{ title | striptags }}"/>
    <meta name="og:site_name" content="{{ site.configuration.title }}"/>
    <meta name="og:image" content="/betty-512x512.png"/>
    <link rel="stylesheet" href="/betty.css"/>
    <link rel="icon" href="/betty.ico">
    <link rel="manifest" href="/betty.webmanifest">
    {%- if 'betty.plugins.js.Js' in plugins %}
    <style id="js-visibility">
        .js-show {
            display: none;
        }
    </style>
    <script>
        document.getElementById('js-visibility').innerHTML = '.js-hide{display:none;}'
    </script>
    {% endif -%}
</head>
<body>
<nav id="nav-primary">
    <div id="site-title"><a href="/">{{ site.configuration.title }}</a></div>
    <input type="checkbox" id="nav-toggle"/>
    <label for="nav-toggle"></label>
    <ul>
        <li><a href="/person">People</a></li>
        <li><a href="/event">Events</a></li>
        <li><a href="/place">Places</a></li>
        <li><a href="/reference">References</a></li>
    </ul>
</nav>
<div id="content">
    <h1>{{ title }}</h1>
    {%- block content -%}{%- endblock -%}
    {% if references | length > 0 %}
        <section id="references">
            <h2>References</h2>
            <ol>
            {% for _, reference in references %}
                <li>{{ referenceMacros.label(reference) }}</li>
            {% endfor %}
            </ol>
        </section>
    {% endif %}
</div>
<footer><p>A family history as told by <a href="https://github.com/bartfeenstra/betty">Betty ðŸ‘µ</a></p></footer>
{%- if 'betty.plugins.js.Js' in plugins %}
    <script src="/betty.js"></script>
{% endif -%}
</body>
</html>
