{% extends 'base.html.j2' %}
{% set title = _('People') %}
{% block content %}
    {%- import 'macro/person.html.j2' as personMacros -%}
    <ul class="entities">
        {%- for person in entities | rejectattr('private', 'eq', True) | sort(attribute='names') %}
            <li class="{{ loop.cycle('odd', 'even') }}">
                {{ personMacros.sortableLabel(person) }}
                {% include 'person-meta.html.j2' %}
            </li>
        {%- endfor -%}
    </ul>
{% endblock %}
