{% extends 'page/base.html.j2' %}
{% set title = 'People' %}
{% block content %}
    <ul class="entities">
        {% for person in entities | sort(attribute='name') %}
            <li class="{{ loop.cycle('odd', 'even') }}">
                <a href="/person/{{ person.id }}">{{ person.name }}</a>
                {% include 'person-meta.html.j2' %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
