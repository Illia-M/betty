{% extends 'page/base.html.j2' %}
{% set title = place.label %}
{% block content %}
    {% include 'place-meta.html.j2' %}

    {% if place.coordinates %}
        <div class="map" id="map-{{ place.id }}" data-place-ids="{{ place.id }}"></div>
    {% endif %}

    {% if place.events | length > 0 %}
        <h2>Events</h2>
        {% with events=place.events, place_context=place %}
            {% include 'list-event.html.j2' %}
        {% endwith %}
    {% endif %}
{% endblock %}