{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "outputDirectoryPath": {
      "type": "string"
    },
    "tile": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "mode": {
      "enum": ["development", "production"]
    },
    "resources_path": {
      "type": "string"
    },
    "plugins": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "configuration": {
                "type": "object"
              }
            },
            "required": [
              "type"
            ]
          }
        ]
      }
    }
  },
  "required": [
    "outputDirectoryPath",
    "url"
  ]
}
