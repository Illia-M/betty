{% extends 'base.html.j2' %}
{% set page_title = citation.location %}
{% block page_content %}
    <div class="meta">
    {% include 'meta/citation.html.j2' %}
    </div>
    {% set files = citation.files %}
    {% if files | length > 0 %}
        <section id="media">
            <h2>
                {% trans %}Media{% endtrans %}
                {% with url = page_resource | url ~ '#media'%}
                    {% include 'permalink.html.j2' %}
                {% endwith %}
            </h2>
            {% include 'list-file.html.j2' %}
        </section>
    {% endif %}
    {% set facts = citation.facts | reject('generated_entity_id') | list %}
    {% if facts | length > 0 %}
        <section id="facts">
            <h2>
                {% trans %}Facts{% endtrans %}
                {% with url = page_resource | url ~ '#facts'%}
                    {% include 'permalink.html.j2' %}
                {% endwith %}
            </h2>
            <ul class="entities">
                {% for fact in facts %}
                    <li class="{{ loop.cycle('odd', 'even') }}">
                        {% with entity=fact, citation_context=citation %}
                            {% include 'label/entity.html.j2' %}
                            {% include 'meta/entity.html.j2' %}
                        {% endwith %}
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endif %}
{% endblock %}